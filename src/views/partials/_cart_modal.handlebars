<head>
    <style>
        /* Animação de deslizar para a direita */
        @keyframes slideInRight {
            0% {
                transform: translateX(100%);
            }
            100% {
                transform: translateX(0);
            }
        }

        /* Animação de deslizar para fora para a direita */
        @keyframes slideOutRight {
            0% {
                transform: translateX(0);
            }
            100% {
                transform: translateX(100%);
            }
        }

        .slide-in-right {
            animation: slideInRight 0.5s forwards;
        }

        .slide-out-right {
            animation: slideOutRight 0.5s forwards;
        }
      
        input[type="number"]::-webkit-outer-spin-button,
        input[type="number"]::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        input[type="number"] {
            -moz-appearance: textfield;
        }

    </style>
</head>

<div id="cartModal" class="fixed inset-0 z-50 bg-black/50 flex justify-end opacity-0 invisible transition-all duration-300 ">
    <div id="modalContent" class="bg-gray-900 z-51 text-white h-full shadow-lg transform translate-x-full opacity-0 flex flex-col modal-cart-content-responsive">
        
        <!-- Cabeçalho -->
        <div class="flex justify-between items-center modal-cart-header-responsive">
            <h2 class="font-bold modal-cart-title-responsive">Shopping Cart</h2>
            <button id="closeModal" class="text-white cursor-pointer font-bold hover:text-red-500 modal-cart-close-btn-responsive">&times;</button>
        </div>

        <!-- Lista de produtos -->
        <div id="cartItems" class="flex-1 overflow-y-auto">
            {{>cart-items cartProducts=cartProducts }}
        </div>

            <!-- Total e Finalizar Pedido -->
        <div class="modal-cart-footer-responsive">
            <div class="flex justify-between items-center modal-cart-total-responsive">
                <span>Total:</span>
                <span id="cartTotal" class="font-bold">R$ 0,00</span>
            </div>
            <a href="/cart/checkout" class="block w-full bg-red-600 text-white font-semibold rounded hover:bg-red-700 transition cursor-pointer modal-checkout-btn-responsive text-center">
                finalize order
            </a>
        </div>
    </div>
</div>

