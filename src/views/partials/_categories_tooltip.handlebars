{{!--
    ⚠️ This tooltip is controlled by the `#categories-list` element in `small-navbar.hbs`
    using hover and JavaScript (click/hover events).
--}}
<div id="tooltip-overlay-container" class="relative z-50">
    <div id="categories_tooltip"
        class="absolute left-[6%] flex flex-col items-center gap-1 p-4 bg-white rounded-lg shadow-lg border border-black invisible opacity-0 transition-all duration-300 ease-in-out z-50 tooltip-categories-responsive"
    >
        {{#each categories}}
            <a href="/category/{{this.slug}}" 
            class="text-black hover:text-black/70 tooltip-a-responsive">
                {{this.title}}
            </a>
            {{#unless @last}}
                <hr class="w-full">
            {{/unless}}
        {{/each}}
    </div>
</div>